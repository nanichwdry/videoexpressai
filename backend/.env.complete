# ===== REQUIRED APIs =====

# RunPod (GPU workers) - REQUIRED
RUNPOD_API_KEY=your_runpod_api_key
RUNPOD_VIDEO_ENDPOINT=https://api.runpod.ai/v2/YOUR_VIDEO_ENDPOINT_ID

# Cloudflare R2 (video storage) - REQUIRED
R2_BUCKET=videoexpress-outputs
R2_PUBLIC_BASE_URL=https://pub-YOUR_ID.r2.dev
AWS_ACCESS_KEY_ID=your_r2_access_key
AWS_SECRET_ACCESS_KEY=your_r2_secret_key
AWS_ENDPOINT_URL=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
AWS_REGION=auto

# Gemini AI (prompt enhancement) - REQUIRED for good results
# Get free key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# ===== OPTIONAL APIs =====

# Additional RunPod workers (deploy later)
RUNPOD_TTS_ENDPOINT=
RUNPOD_LIPSYNC_ENDPOINT=
RUNPOD_LORA_ENDPOINT=

# Supabase (social features)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Sentry (error tracking)
SENTRY_DSN=

# OAuth (YouTube/Instagram upload)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
INSTAGRAM_CLIENT_ID=
INSTAGRAM_CLIENT_SECRET=

# ===== SYSTEM CONFIG =====

DB_PATH=./jobs.db
JOB_HEARTBEAT_TIMEOUT=600
COLD_START_THRESHOLD=15
